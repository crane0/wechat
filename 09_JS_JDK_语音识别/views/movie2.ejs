<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=0">
  <title>movie</title>
</head>
<body>
  <h1>点击屏幕开始录音</h1>
  <ul id="list">

  </ul>
  <!--这个是微信官方提供的接口，要先引入，后面的才有效-->
  <script type="text/javascript" src="http://res.wx.qq.com/open/js/jweixin-1.2.0.js"></script>
  <script type="text/javascript" src="https://cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
  <script type="text/javascript">
      // JSSDK使用步骤

      window.onload = function () {
        // 通过config接口注入权限验证配置
        wx.config({
          debug: false, // 开启调试模式,调用的所有api的返回值会在客户端alert出来，若要查看传入的参数，可以在pc端打开，参数信息会通过log打出，仅在pc端时才会打印。
          appId: 'wx16767b1c9414ad7a', // 必填，公众号的唯一标识
          timestamp: '<%= timestamp %>', // 必填，生成签名的时间戳
          nonceStr: '<%= noncestr %>', // 必填，生成签名的随机串
          signature: '<%= signature %>',// 必填，签名
          jsApiList: [
            'startRecord',   //开始录音
            'stopRecord',  //停止录音
            'translateVoice'  //翻译声音
          ] // 必填，需要使用的JS接口列表
        })

        //通过ready接口处理成功验证
        wx.ready(function(){
          //基础接口
          // config信息验证后会执行ready方法，所有接口调用都必须在config接口获得结果之后，
          // config是一个客户端的异步操作，所以如果需要在页面加载时就调用相关接口，
          // 则须把相关接口放在ready函数中调用来确保正确执行。
          // 对于用户触发时才调用的接口，则可以直接调用，不需要放在ready函数中。

          wx.checkJsApi({
            jsApiList: ['translateVoice'], // 需要检测的JS接口列表，所有JS接口列表见附录2,
            success: function(res) {
              // 以键值对的形式返回，可用的api值true，不可用为false
              // 如：{"checkResult":{"chooseImage":true},"errMsg":"checkJsApi:ok"}
              console.log(res)
            }
          })
        })

        var isRecord = false;
          //获取dom对象，绑定touchend事件
          $('h1').on('touchend', function () {
              if (isRecord) {
                  //结束录音（微信的接口）
                  wx.stopRecord({
                      success: function (res) {
                          var localId = res.localId  //录音保存微信服务器中，提供id给我们
                          //翻译语音
                          wx.translateVoice({
                              localId: localId, // 需要识别的音频的本地Id，由录音相关接口获得
                              isShowProgressTips: 1, // 默认为 1，显示进度提示
                              success: function (res) {
                                  alert(res.translateResult) // 语音识别的结果
                              }
                          })
                          isRecord = false
                      },
                      error: function (err) {
                          console.log(err)
                      }
                  })
              } else {
                  //开始录音（微信的接口）
                  wx.startRecord({
                      success: function (res) {
                          isRecord = true
                          console.log('录音成功')
                          console.log(res)
                      }
                  })
              }
          })
      }
  </script>
</body>
</html>